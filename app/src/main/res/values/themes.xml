<resources >
    <!-- Base application theme. -->
    <style name="Theme.MADProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorPrimaryVariant">#6EC6FF</item>
        <item name="colorPrimaryDark">#0069C0</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColor">@color/black</item>

        <item name="colorControlNormal">@color/black</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorSecondaryVariant">#018786</item>

        <item name="colorError">#B00020</item>
        <item name="colorOnError">#FFFFFF</item>

        <item name="color">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#EBFFFFFF</item>
        <item name="android:scrollbarThumbVertical">@color/gray</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>

        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>

    </style>

    <style name="Theme.MADProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyAppBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>

    </style>

    <style name="ImageViewBorder">
        <item name="civ_border_color">@color/black</item>
        <item name="civ_border_width">1dp</item>
    </style>

    <style name="CardViewBorder">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="MyFiltersStyle">
        <item name="android:textColorHint">@color/black</item>
        <item name="startIconTint">@color/black</item>
        <item name="endIconTint">@color/black</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="startIconTint">@color/black</item>
        <item name="endIconTint">@color/black</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>