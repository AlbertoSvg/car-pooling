<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MADProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">#90CAF9</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorPrimaryVariant">#C3FDFF</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColor">@color/white</item>

        <item name="colorControlNormal">@color/black</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorSecondaryVariant">#02B8A7</item>

        <item name="colorOnSurface">#FF000000</item>

        <item name="colorError">#CF6679</item>
        <item name="colorOnError">#000000</item>

        <item name="color">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:scrollbarThumbVertical">?attr/colorPrimaryDark</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>

    </style>

    <style name="Theme.MADProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyAppBar">
        <item name="android:background">#4A000000</item>
    </style>

    <style name="ImageViewBorder">
        <item name="civ_border_color">#737373</item>
        <item name="civ_border_width">1dp</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="startIconTint">@color/white</item>
        <item name="endIconTint">@color/white</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">20dp</item>
    </style>

</resources>