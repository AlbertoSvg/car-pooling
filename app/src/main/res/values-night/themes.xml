<resources >
    <!-- Base application theme. -->
    <style name="Theme.MADProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">#90CAF9</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorPrimaryVariant">#C3FDFF</item>
        <item name="colorPrimaryDark">#0F164E</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColor">@color/white</item>

        <item name="colorControlNormal">@color/black</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorSecondaryVariant">#02B8A7</item>

        <item name="colorOnSurface">#000000</item>

        <item name="colorError">#CF6679</item>
        <item name="colorOnError">#000000</item>

        <item name="color">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#BEFFFFFF</item>
        <item name="android:scrollbarThumbVertical">@color/black</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>

    </style>

    <style name="Theme.MADProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyAppBar">
        <item name="android:background">#4A000000</item>
    </style>

    <style name="ImageViewBorder">
        <item name="civ_border_color">#737373</item>
        <item name="civ_border_width">1dp</item>
    </style>

    <style name="CardViewBorder">
        <item name="strokeColor">#737373</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="MyFiltersStyle">
        <item name="android:textColorHint">@color/white</item>
        <item name="startIconTint">@color/white</item>
        <item name="endIconTint">@color/white</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="startIconTint">@color/white</item>
        <item name="endIconTint">@color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>