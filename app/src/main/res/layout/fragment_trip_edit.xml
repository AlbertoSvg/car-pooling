<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TripEditFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">

        <ImageView
            android:id="@+id/imageCar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton2"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/outline_add_a_photo_30"
            android:background="@drawable/button_state_selector"
            android:tint="?attr/color"
            app:layout_constraintBottom_toBottomOf="@+id/imageCar"
            app:layout_constraintEnd_toEndOf="@+id/imageCar"
            app:layout_constraintStart_toStartOf="@+id/imageCar"
            app:layout_constraintTop_toTopOf="@+id/imageCar"
            app:layout_constraintHorizontal_bias="0.773"
            app:layout_constraintVertical_bias="1.0"
            android:onClick="openContextMenu"
            tools:ignore="OnClick"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RelativeLayout"
        app:layout_constraintVertical_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout6"
                style="@style/MyTextInputLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/outline_trip_origin_black_24"
                android:hint="Departure" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/departure_location"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="18"
                    android:inputType="text"
                    android:maxLength="30"
                    android:textColor="?attr/color"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout7"
                style="@style/MyTextInputLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/outline_location_on_black_24"
                android:hint="Arrival" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/arrival_location"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:textColor="?attr/color"
                android:maxLength="30"
                android:ems="18"
                android:inputType="text"  />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout8"
                style="@style/MyTextInputLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                android:hint="Date"
                app:startIconDrawable="@drawable/outline_calendar_today_black_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:textColor="?attr/color"
                android:maxLength="30"
                android:ems="18"
                android:inputType="date"  />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout9"
                style="@style/MyTextInputLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/outline_schedule_black_24"
                android:hint="Time" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/time"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="18"
                    android:inputType="time"
                    android:maxLength="30"
                    android:textColor="?attr/color"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout10"
                style="@style/MyTextInputLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/outline_hourglass_top_black_24"
                android:hint="Estimated duration (hours)" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/duration"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="18"
                    android:inputType="numberDecimal"
                    android:maxLength="30"
                    android:textColor="?attr/color"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout11"
                style="@style/MyTextInputLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/outline_chair_black_24"
                android:hint="Available seats" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/seats"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="18"
                    android:inputType="number"
                    android:maxLength="30"
                    android:textColor="?attr/color"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout12"
                style="@style/MyTextInputLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/outline_euro_black_24"
                android:hint="Price (€)" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/price"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="18"
                    android:inputType="number"
                    android:maxLength="30"
                    android:textColor="?attr/color"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout13"
                style="@style/MyTextInputLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/outline_info_black_24"
                android:hint="Additional informations" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/info"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="18"
                    android:inputType="text"
                    android:maxLength="50"
                    android:textColor="?attr/color"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout14"
                style="@style/MyTextInputLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/outline_add_location_alt_black_24"
                android:hint="Intermediate stops" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/intermediate_stops"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="18"
                    android:inputType="text"
                    android:maxLength="30"
                    android:textColor="?attr/color"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>





        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
