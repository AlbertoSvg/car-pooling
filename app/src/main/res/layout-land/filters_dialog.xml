<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_filterDeparture"
            style="@style/MyFiltersStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:hint="Departure Location"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/outline_trip_origin_black_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filter_departure_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:inputType="textCapSentences"
                android:maxLength="30"
                android:textColor="?attr/color"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_filterArrival"
            style="@style/MyFiltersStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Arrival Location"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/outline_location_on_black_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filter_arrival_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:inputType="textCapSentences"
                android:maxLength="30"
                android:textColor="?attr/color"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_filterDate"
            style="@style/MyFiltersStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Departure Date"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/outline_calendar_today_black_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filter_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:inputType="date"
                android:textColor="?attr/color"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_filterTime"
            style="@style/MyFiltersStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Departure Time"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/outline_schedule_black_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filter_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:inputType="time"
                android:textColor="?attr/color"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_filterPrice"
            style="@style/MyFiltersStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Max Price"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/outline_euro_black_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filter_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:inputType="numberDecimal"
                android:maxLength="9"
                android:textColor="?attr/color"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>