<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/tripList">

    <fragment
        android:id="@+id/showProfile"
        android:name="com.example.madproject.ShowProfileFragment"
        android:label="Your profile"
        tools:layout="@layout/fragment_show_profile" >
        <action
            android:id="@+id/action_showProfile_to_editProfile"
            app:destination="@id/editProfile" />
    </fragment>

    <fragment
        android:id="@+id/editProfile"
        android:name="com.example.madproject.EditProfileFragment"
        android:label="Edit your profile..."
        tools:layout="@layout/fragment_edit_profile" >
        <action
            android:id="@+id/action_editProfile_to_showProfile"
            app:destination="@id/showProfile" />
        <argument
            android:name="group11.lab1.FULL_NAME"
            app:argType="string"
            android:defaultValue="Heydarli Atabay" />
        <argument
            android:name="group11.lab1.NICKNAME"
            app:argType="string"
            android:defaultValue="Atash" />
        <argument
            android:name="group11.lab1.EMAIL"
            app:argType="string"
            android:defaultValue="heydarli.atabay@gmail.com" />
        <argument
            android:name="group11.lab1.LOCATION"
            app:argType="string"
            android:defaultValue="Turin, Italy" />
        <argument
            android:name="group11.lab1.PHONE_NUMBER"
            app:argType="string"
            android:defaultValue="3490838493" />
        <argument
            android:name="group11.lab1.DATE_OF_BIRTH"
            app:argType="string"
            android:defaultValue="23/08/1996" />
        <argument
            android:name="group11.lab1.CURRENT_PHOTO_PATH"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/tripList"
        android:name="com.example.madproject.TripListFragment"
        android:label="Trip list"
        tools:layout="@layout/fragment_trip_list" >

        <action
            android:id="@+id/action_tripList_to_tripDetail"
            app:destination="@id/tripDetail" />
        <action
            android:id="@+id/action_tripList_to_tripEdit"
            app:destination="@id/tripEdit" />
    </fragment>

    <fragment
        android:id="@+id/tripDetail"
        android:name="com.example.madproject.TripDetailFragment"
        android:label="Trip details"
        tools:layout="@layout/fragment_trip_detail" >

        <action
            android:id="@+id/action_tripDetail_to_tripEdit"
            app:destination="@id/tripEdit" />
    </fragment>

    <fragment
        android:id="@+id/tripEdit"
        android:name="com.example.madproject.TripEditFragment"
        android:label="Edit your trip..."
        tools:layout="@layout/fragment_trip_edit" >

        <action
            android:id="@+id/action_tripEdit_to_tripList"
            app:destination="@id/tripList" />
        <argument
            android:name="group11.lab2.DEPARTURE"
            app:argType="string"
            android:defaultValue="Turin, Italy" />
        <argument
            android:name="group11.lab2.ARRIVAL"
            app:argType="string"
            android:defaultValue="Catania, Italy" />
        <argument
            android:name="group11.lab2.DATE"
            app:argType="string"
            android:defaultValue="22/12/2020" />
        <argument
            android:name="group11.lab2.TIME"
            app:argType="string"
            android:defaultValue="08:30" />
        <argument
            android:name="group11.lab2.DURATION"
            app:argType="string"
            android:defaultValue="15" />
        <argument
            android:name="group11.lab2.SEATS"
            app:argType="string"
            android:defaultValue="3" />
        <argument
            android:name="group11.lab2.PRICE"
            app:argType="string"
            android:defaultValue="50" />
        <argument
            android:name="group11.lab2.INFO"
            app:argType="string"
            android:defaultValue="No space for luggages, listening rap music" />
        <argument
            android:name="group11.lab2.STOPS"
            app:argType="string"
            android:defaultValue="Stop in Naples, at 16:00" />
        <argument
            android:name="group11.lab2.CURRENT_CAR_PATH"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

</navigation>